module Deeprails
  module Resources
    class Monitor
      def create: (
        guardrail_metrics: ::Array[Deeprails::Models::MonitorCreateParams::guardrail_metric],
        name: String,
        ?description: String,
        ?file_search: ::Array[String],
        ?web_search: bool,
        ?request_options: Deeprails::request_opts
      ) -> Deeprails::MonitorResponse

      def retrieve: (
        String monitor_id,
        ?limit: Integer,
        ?request_options: Deeprails::request_opts
      ) -> Deeprails::MonitorDetailResponse

      def update: (
        String monitor_id,
        ?description: String,
        ?monitor_status: Deeprails::Models::MonitorUpdateParams::monitor_status,
        ?name: String,
        ?request_options: Deeprails::request_opts
      ) -> Deeprails::MonitorResponse

      def submit_event: (
        String monitor_id,
        model_input: Deeprails::MonitorSubmitEventParams::ModelInput,
        model_output: String,
        ?nametag: String,
        ?run_mode: Deeprails::Models::MonitorSubmitEventParams::run_mode,
        ?request_options: Deeprails::request_opts
      ) -> Deeprails::MonitorEventResponse

      def initialize: (client: Deeprails::Client) -> void
    end
  end
end
